<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirdFormActivity">

    <LinearLayout
        android:id="@+id/linearLayout01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/ettitleform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:minHeight="48dp"
            android:text="Sobre la foto de tu ave"
            android:textAlignment="center" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            app:src="@drawable/pajaro" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextBirdName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nombre de Ave " />

                <TextView
                    android:id="@+id/titleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="text"
                    android:text="UbicaciÃ³n" />

                <TextView
                    android:id="@+id/latitud"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Latitud:" />

                <TextView
                    android:id="@+id/longitud"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Longitud:" />

                <TextView
                    android:id="@+id/Fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Fecha:" />
    </LinearLayou>


    <LinearLayout
        android:id="@+id/linearLayout03"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout02">

            <TextView
                android:id="@+id/etprueba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:minHeight="48dp"
                android:text="segundo Bloque"
                android:textAlignment="center"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>